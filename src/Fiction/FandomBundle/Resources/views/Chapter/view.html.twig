{% extends 'FictionAppBundle:Base:layout.html.twig' %}

{% block title %} {{ chapter.title }} {% endblock %}

{% block body %}
	{{ form_start(form) }}
		{{ form_errors(form) }}
		<div class="form-group">
			<div class="col-md-9 text-center h3">
				{{ form_label(form.chapters, chapter.title) }}
			</div>
			<div class="col-md-3 h2">
				<div class="input-group">
			        {{ form_errors(form.chapters) }}
			        {{ form_widget(form.chapters) }}
					<span class="input-group-btn"><button type="submit" class="btn btn-default">Go</button></span>
				</div>
			</div>
		</div>
	{{ form_end(form) }}
	<p>{{ chapter.content|e|markdown }}</p>
{% endblock %}